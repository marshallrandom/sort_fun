<html>
<head>


    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/stylesheet.css">


</head>
<script type="text/javascript">
    var clickedoncealready = false;
	function disableButton(btn){
  
        if (!clickedoncealready) {
            clickedoncealready = true;
            document.getElementById( 'choice1' ).disabled = true;
            document.getElementById( 'choice2' ).disabled = true;
            if (btn.id == "choice1")
                document.getElementById( 'formchoice1' ).submit();
            else if (btn.id == "choice2")
                document.getElementById( 'formchoice2' ).submit();
        }
        else
        {
//alert("Already pressed");
            

        }


	}
</script>
<h1><%=sortitem.sortname%></h1>
<h1><%=sortitem.propertycompare%></h1>


    <div class="row">

        <div class="col-sm">
            <h3><%=firstitem.name%></h3>
            <h4><%=firstitem.description%></h4>
            <% if (firstitem.image != "") { %>
            <img src="<%=firstitem.image%>" width="300" height="300" alt="image here">
            <% } %>
                <form class="form-inline" id="formchoice1" action="/sortlistdecision" method="POST">
                    <div class="control-group">
                        <input class="form-control" type="hidden" id="firstitem" name="firstitem" value="<%=firstitem.id%>">
                        <input class="form-control" type="hidden" id="seconditem" name="seconditem" value="<%=seconditem.id%>">
                        <input class="form-control" type="hidden" id="sortitem" name="sortitem" value="<%=sortitem.id%>">
                        <input class="form-control" type="hidden" id="decisionitem" name="decisionitem" value="<%=firstitem.id%>">
                        <div class="form-group">
                            <button id="choice1" class="btn btn-lg btn-primary btn-block" onclick="disableButton(this)">This One</button>
                        </div><br>
                        <input class="form-control" type="text" id="reason" name="reason" maxlength="100" placeholder="reason (optional)">
                    </div>


                </form>


           
        </div>
        <div class="col-sm">
            <h3><%=seconditem.name%></h3>
            <h4><%=seconditem.description%></h4>
            <% if (seconditem.image != "") { %>            
            <img src="<%=seconditem.image%>" width="300" height="300" alt="image here">  
            <% } %>
                <form class="form-inline" id="formchoice2" action="/sortlistdecision" method="POST">
                    <div class="control-group">

                        <input class="form-control" type="hidden" id="firstitem" name="firstitem" value="<%=firstitem.id%>">
                        <input class="form-control" type="hidden" id="seconditem" name="seconditem" value="<%=seconditem.id%>">
                        <input class="form-control" type="hidden" id="sortitem" name="sortitem" value="<%=sortitem.id%>">
                        <input class="form-control" type="hidden" id="decisionitem" name="decisionitem" value="<%=seconditem.id%>">                       
                        <div class="form-group">
                            <button id="choice2" class="btn btn-lg btn-primary btn-block" onclick="disableButton(this)">This One</button>
                        </div><br>
                        <input class="form-control" type="text" id="reason" maxlength="100" name="reason" placeholder="reason (optional)">

                    </div>


                </form>
         
        </div>
    </div> 
    <div class="progress ml-3">  
        <div class="progress-bar progress-bar" role="progressbar" style="width: <%=(Math.round( percentcomplete ))%>%;" aria-valuenow="<%=(Math.round( percentcomplete ))%>" aria-valuemin="0" aria-valuemax="100">
            <%=(Math.round( ( percentcomplete + Number.EPSILON ) * 100 ) / 100)%>%
        </div>
    </div>


<a href="/">Back To Main</a>


</html>